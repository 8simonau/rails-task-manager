<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>

  <div>
    <% if task.completed %>
      <input type="checkbox" checked/>
    <% else %>
      <input type="checkbox"/>
    <% end %>
    <label><%= link_to task.title, task_path(task) %> - <%= link_to "Delete", delete_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
 %></label>
  </div>
  <% end %>
</ul>

<%= link_to "Add a new task", tasks_new_path %>
